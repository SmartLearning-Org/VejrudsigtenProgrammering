        <Label Grid.Column="1" Content="Dagen efter" HorizontalAlignment="Left" Margin="219,220,0,0" VerticalAlignment="Top"/>
        <Image x:Name="TypeDag3" Grid.Column="1" HorizontalAlignment="Left" Height="75" Margin="219,251,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="TemperaturDag3" Grid.Column="1" Content="C" HorizontalAlignment="Left" Margin="227,329,0,0" VerticalAlignment="Top" Width="50"/>


    </Grid>
</Window>
