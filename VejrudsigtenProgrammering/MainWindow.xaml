        <Label Grid.Column="1" Content="I morgen" HorizontalAlignment="Left" Margin="19,220,0,0" VerticalAlignment="Top"/>
        <Image x:Name="TypeDag1" Grid.Column="1" HorizontalAlignment="Left" Height="75" Margin="19,251,0,0" VerticalAlignment="Top" Width="75"/>
